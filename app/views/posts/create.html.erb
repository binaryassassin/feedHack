<h1>Create</h1>

<!-- 
  form_for without url redirection  
  <%= form_for :post do |f| %>
-->
<%= form_for :post, url: posts_path do |f| %>
  <p>
    <p>
      <%= f.label :title %>
      <br />
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :text %>
      <br/>
      <%= f.text_area :text %>
    </p> 
    <p>
      <%= f.submit %>
    </p>
  </p>