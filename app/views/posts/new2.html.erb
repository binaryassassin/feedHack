<h1>New</h1>
<%= form_for :post, url: posts_path do |f| %>
  <% if @post.errors.any? %>
  <div id = "errorExplain">
    <h2>
      <%= pluralize(@post.errors.count, "error" %>
      prohibited this post from being saved:
    </h2>
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li>
          <%= msg %>
        </li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <p>
    <p>
      <%= f.label :title %>
      <br />
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :text %>
      <br/>
      <%= f.text_area :text %>
    </p> 
    <p>
      <%= f.submit %>
    </p>
  </p>
<% end %>
<br/>
<%= link_to 'Go Back', posts_path %>